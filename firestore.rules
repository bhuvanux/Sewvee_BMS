rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Staging Rules: Allow read/write for all authenticated users
    // Allow public read for users collection (Required for Phone + PIN Login lookup)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default rule: specific match above takes precedence for 'users', 
    // but we keep this for everything else.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
